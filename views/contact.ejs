<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Contact Us - HESHAM Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .contact-hero {
      background: linear-gradient(120deg, #3498db 60%, #2ecc71 100%);
      color: #fff;
      padding: 3rem 1rem 2rem 1rem;
      border-radius: 0 0 2rem 2rem;
      box-shadow: 0 4px 24px rgba(52,152,219,0.10);
      text-align: center;
      margin-bottom: 2rem;
    }
    .contact-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(44,62,80,0.08);
      background: var(--color-card-bg, #fff);
    }
    .contact-info i {
      font-size: 1.5rem;
      color: #3498db;
      margin-right: 0.5rem;
    }
    .social-icons a {
      color: #3498db;
      font-size: 1.5rem;
      margin: 0 0.5rem;
      transition: color 0.2s;
    }
    .social-icons a:hover {
      color: #2ecc71;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Responsive Navbar -->
  <%- include('partials/navbar') %>
  <div style="height:70px;"></div>

  <!-- Hero Section -->
  <section class="contact-hero">
    <h1 class="display-6 fw-bold mb-2">Contact Us</h1>
    <p class="lead mb-0">We'd love to hear from you! Reach out with any questions or feedback.</p>
  </section>

  <div class="container mt-4 flex-grow-1">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="card contact-card p-4 mb-4">
          <form action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" name="name" id="name" class="form-control" required />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" id="email" class="form-control" required />
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea name="message" id="message" class="form-control" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-send"></i> Send Message
            </button>
          </form>
        </div>
        <div class="card contact-card p-4">
          <h5 class="mb-3">Contact Information</h5>
          <div class="contact-info mb-2">
            <i class="bi bi-envelope"></i> info@ahmedstore.com
          </div>
          <div class="contact-info mb-2">
            <i class="bi bi-telephone"></i> +123 456 7890
          </div>
          <div class="contact-info mb-3">
            <i class="bi bi-geo-alt"></i> 123 Main Street, City, Country
          </div>
          <div class="social-icons">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-twitter"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    &copy; 2025 AHMED Store
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
