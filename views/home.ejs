<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>AHMED Store - Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .hero-modern {
      background: linear-gradient(120deg, #3498db 60%, #2ecc71 100%);
      color: #fff;
      padding: 5rem 1rem 3rem 1rem;
      border-radius: 0 0 2rem 2rem;
      box-shadow: 0 4px 24px rgba(52,152,219,0.15);
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    .hero-modern h1 {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 1rem;
      letter-spacing: 1px;
    }
    .hero-modern .lead {
      font-size: 1.3rem;
      opacity: 0.95;
      margin-bottom: 2rem;
    }
    .hero-modern .btn-primary {
      font-size: 1.2rem;
      padding: 0.75rem 2.5rem;
      border-radius: 2rem;
      box-shadow: 0 2px 8px rgba(44,62,80,0.08);
    }
    .product-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(44,62,80,0.08);
      transition: transform 0.2s, box-shadow 0.2s;
      background: var(--color-card-bg, #fff);
    }
    .product-card:hover {
      transform: translateY(-8px) scale(1.03);
      box-shadow: 0 8px 32px rgba(52,152,219,0.15);
      background: var(--color-card-hover, #f8f9fa);
    }
    .product-card .card-img-top {
      border-radius: 1rem 1rem 0 0;
      height: 200px;
      object-fit: cover;
    }
    .product-card .card-title {
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--color-primary, #3498db);
    }
    .product-card .card-footer {
      background: none;
      border-top: none;
    }
    .modern-footer {
      background: linear-gradient(90deg, #3498db 60%, #2ecc71 100%);
      color: #fff;
      border-radius: 2rem 2rem 0 0;
      box-shadow: 0 -2px 12px rgba(44,62,80,0.08);
      font-size: 1rem;
      margin-top: 3rem;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <%- include('partials/navbar') %>
  <div style="height:70px;"></div>

  <!-- Hero Section -->
  <header class="hero-modern">
    <h1>
      <% if (user) { %>
        Welcome, <%= user.username %>
      <% } else { %>
        Welcome to AHMED Store
      <% } %>
    </h1>
    <p class="lead">Discover the latest products, best deals, and a seamless shopping experience.</p>
    <a href="/products" class="btn btn-primary btn-lg shadow">Browse Products</a>
  </header>

  <!-- Main Content -->
  <main class="container mt-5 flex-grow-1">
    <h2 class="mb-4 text-center text-primary">Featured Products</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% if (products.length === 0) { %>
        <p class="text-center w-100">No products available.</p>
      <% } else { %>
        <% products.forEach(product => { %>
          <div class="col">
            <div class="card product-card h-100">
              <img src="<%= product.image %>" class="card-img-top" alt="Product Image">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text text-muted"><%= product.description %></p>
              </div>
              <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="fw-bold text-primary">$<%= product.price %></span>
                <a href="/products" class="btn btn-outline-primary btn-sm rounded-pill">View</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </main>

  <footer class="modern-footer text-center py-3 mt-auto">
    &copy; 2025 AHMED Store
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
