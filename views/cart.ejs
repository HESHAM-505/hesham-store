<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - HESHAM Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body.dark-mode {
      background-color: #181a1b !important;
      color: #f1f1f1 !important;
    }
    .dark-mode .card {
      background-color: #23272b !important;
      color: #f1f1f1 !important;
    }
    .dark-mode .navbar, .dark-mode .footer, .dark-mode .bg-dark {
      background-color: #181a1b !important;
    }
    .dark-mode .alert-info {
      background-color: #23272b !important;
      color: #f1f1f1 !important;
      border-color: #23272b !important;
    }
    .cart-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(44,62,80,0.08);
      background: var(--color-card-bg, #fff);
    }
    .cart-card .card-img-top {
      border-radius: 1rem 1rem 0 0;
      height: 200px;
      object-fit: cover;
    }
    .cart-card .card-title {
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--color-primary, #3498db);
    }
    .cart-total-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(44,62,80,0.08);
      background: linear-gradient(120deg, #3498db 60%, #2ecc71 100%);
      color: #fff;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">
  <!-- Responsive Navbar -->
  <%- include('partials/navbar') %>
  <div style="height:70px;"></div>
  <div class="container mt-4 flex-grow-1">
    <h2 class="mb-4 text-center">Your Cart</h2>
    <% if (!products || products.length === 0) { %>
      <div class="alert alert-info text-center">Your cart is empty.</div>
    <% } else { 
        let total = 0;
    %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% products.forEach(product => { total += product.price; %>
          <div class="col">
            <div class="card cart-card h-100">
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text text-muted"><%= product.description %></p>
                <p class="card-text fw-bold mb-2">$<%= product.price.toFixed(2) %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="row justify-content-center mt-4">
        <div class="col-auto">
          <div class="card cart-total-card p-3 shadow-sm">
            <h5 class="mb-3 text-center">Total: <span class="fw-bold">$<%= total.toFixed(2) %></span></h5>
            <a href="/checkout" class="btn btn-light btn-lg w-100 fw-bold"><i class="bi bi-credit-card"></i> Checkout</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    &copy; <%= new Date().getFullYear() %> HESHAM Store. All rights reserved.
  </footer>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>