<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Account - AHMED Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .account-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(44,62,80,0.08);
      background: var(--color-card-bg, #fff);
      padding: 2rem 2rem 1.5rem 2rem;
      margin-bottom: 2rem;
    }
    .account-title {
      color: #3498db;
      font-weight: bold;
      letter-spacing: 1px;
    }
    .form-label {
      color: #3498db;
      font-weight: 500;
    }
    .btn-success, .btn-primary {
      border-radius: 2rem;
      font-size: 1.1rem;
      font-weight: 600;
      letter-spacing: 1px;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar partial -->
  <%- include('partials/navbar') %>

  <!-- Spacer for the fixed-top navbar -->
  <div style="height: 70px;"></div>
  
  <div class="container mt-4 flex-grow-1" style="max-width: 600px;">
    <div class="card account-card">
      <h2 class="text-center mb-4 account-title"><i class="bi bi-person-circle"></i> My Account</h2>

      <!-- User Info -->
      <div class="mb-4">
        <p><strong>Username:</strong> <%= user.username %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
      </div>

      <hr>

      <!-- Update Info -->
      <h4 class="mb-3">Update Info</h4>
      <form action="/update-account" method="POST" class="mb-4">
        <div class="mb-3">
          <label for="username" class="form-label">New Username</label>
          <input type="text" id="username" name="username" class="form-control" placeholder="Enter new username" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">New Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter new email" required>
        </div>
        <button type="submit" class="btn btn-success w-100">Update</button>
      </form>

      <hr>

      <!-- Change Password -->
      <h4 class="mb-3">Change Password</h4>
      <form action="/change-password" method="POST">
        <div class="mb-3">
          <label for="oldPassword" class="form-label">Current Password</label>
          <input type="password" id="oldPassword" name="oldPassword" class="form-control" placeholder="Enter current password" required>
        </div>
        <div class="mb-3">
          <label for="newPassword" class="form-label">New Password</label>
          <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="Enter new password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Change Password</button>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    &copy; 2025 AHMED Store
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
