<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register - HESHAM Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .register-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(44,62,80,0.08);
      background: var(--color-card-bg, #fff);
      padding: 2rem 2rem 1.5rem 2rem;
      margin-bottom: 2rem;
    }
    .register-title {
      color: #3498db;
      font-weight: bold;
      letter-spacing: 1px;
    }
    .form-label {
      color: #3498db;
      font-weight: 500;
    }
    .btn-primary {
      border-radius: 2rem;
      font-size: 1.1rem;
      font-weight: 600;
      letter-spacing: 1px;
    }
    .login-link {
      display: block;
      text-align: center;
      margin-top: 1rem;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Responsive Navbar -->
  <%- include('partials/navbar') %>
  <div style="height:70px;"></div>

  <div class="container mt-4 flex-grow-1" style="max-width: 400px;">
    <div class="card register-card">
      <h2 class="text-center mb-4 register-title"><i class="bi bi-pencil-square"></i> Create a New Account</h2>
      <form action="/register" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input id="username" type="text" class="form-control" name="username" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input id="email" type="email" class="form-control" name="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input id="password" type="password" class="form-control" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Register</button>
      </form>
      <a href="/login" class="login-link">Already have an account? Login</a>
    </div>
  </div>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    &copy; 2025 AHMED Store
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
